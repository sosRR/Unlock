<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:rsuapp="http://schemas.android.com/apk/res-auto">
  <TextView android:id="@id/version"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20.0sp" />
  <TextView android:id="@id/about"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20.0sp" />
  <TextView android:id="@id/legal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0sp"
            android:layout_marginTop="20.0sp"
            android:layout_marginRight="20.0sp"
            android:layout_marginBottom="0.0sp" />
  <TextView android:id="@id/notices"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0sp"
            android:layout_marginRight="20.0sp"
            android:layout_marginBottom="20.0sp" />
  <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
    <Button android:id="@id/report_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_report_problem"
            rsuapp:layout_constraintBottom_toBottomOf="parent"
            rsuapp:layout_constraintEnd_toEndOf="parent"
            rsuapp:layout_constraintStart_toStartOf="parent"
            rsuapp:layout_constraintTop_toTopOf="parent" />
  </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>