<?xml version='1.0' encoding='utf-8' ?>
<androidx.constraintlayout.widget.ConstraintLayout android:gravity="center_horizontal"
                      android:id="@id/linearLayout"
                      android:background="@color/processing_dialog_bkg"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:rsuapp="http://schemas.android.com/apk/res-auto">
  <TextView android:textSize="@dimen/text_size"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:id="@id/process_msg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40.0dp"
            rsuapp:layout_constraintBottom_toTopOf="@id/progressBar"
            rsuapp:layout_constraintEnd_toEndOf="parent"
            rsuapp:layout_constraintStart_toStartOf="parent" />
  <TextView android:textSize="@dimen/text_size"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:id="@id/textView2"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40.0dp"
            android:text="@string/process_please_wait"
            rsuapp:layout_constraintEnd_toEndOf="parent"
            rsuapp:layout_constraintHorizontal_bias="0.0"
            rsuapp:layout_constraintStart_toStartOf="parent"
            rsuapp:layout_constraintTop_toBottomOf="@id/progressBar" />
  <ProgressBar android:theme="@style/ProcessingDialog"
               android:id="@id/progressBar"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:indeterminate="true"
               android:indeterminateDrawable="@drawable/progress_animation"
               android:indeterminateTint="@color/processing_dialog_spinner"
               rsuapp:layout_constraintBottom_toBottomOf="parent"
               rsuapp:layout_constraintEnd_toEndOf="parent"
               rsuapp:layout_constraintHorizontal_bias="0.498"
               rsuapp:layout_constraintStart_toStartOf="parent"
               rsuapp:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>