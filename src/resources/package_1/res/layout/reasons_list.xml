<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
  <TextView android:id="@id/top_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20.0sp"
            android:text="@string/device_temporary_eligibility_reasons"
            android:layout_weight="0.0" />
  <androidx.recyclerview.widget.RecyclerView android:layout_gravity="fill_vertical"
                        android:id="@id/reason_list"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.0" />
  <TextView android:id="@id/bottom_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0sp"
            android:text="@string/device_temporary_eligibility_reasons_note"
            android:layout_weight="0.0" />
</LinearLayout>